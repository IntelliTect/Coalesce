@{
    string applicationName = "Coalesce";
    string fluid = "";
    if (ViewBag.Fluid != null && ViewBag.Fluid == true) { fluid = "fluid"; }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - by IntelliTect</title>
    @*<link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />*@
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-datetimepicker/css/bootstrap-datetimepicker.css" rel="stylesheet" />
    <link href="~/lib/select2/css/select2.css" rel="stylesheet" />
    <link href="~/lib/select2-bootstrap/select2-bootstrap.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />

    @*<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"></script>*@
</head>
<body class="@ViewBag.BodyClass">

    <header role="banner">
        <div class="container">
            <div class="row">
                <nav class="navbar" role="navigation">


                    <div class="col-lg-4 col-md-5 col-xs-8" style="padding-right: 0">
                        <!-- text-right-->
                        <h1 id="logo">
                            <a href="/" class="coalesce-logo-text">
                                Coalesce
                            </a>
                            <a href="http://www.intellitect.com/" class="intellitect-logo-text">
                                <span style="font-size: 0.8em"> by</span> <span>IntelliTect</span>
                            </a>
                        </h1>
                    </div>

                    <div class="navbar-header col-xs-12 col-sm-12">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapse">
                            <span class="sr-only">Toggle navigation</span>

                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>

                    <div class="col-lg-8 col-md-7 col-xs-4 text-right">
                        <div class="collapse navbar-collapse" id="collapse">
                            <nav class="site-nav" role="navigation">

                                <div class="menu-top-menu-container">
                                    <ul id="menu-top-menu" class="nav">
                                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                                        <li><a asp-controller="Demo" asp-action="Index">Demo</a></li>
                                        <li><a asp-controller="Home" asp-action="Get">Get Coalesce</a></li>
                                        <li><a asp-controller="Home" asp-action="Documentation">Documentation</a></li>
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Repos <i class="fa fa-github" aria-hidden="true"></i> <span class="caret"></span></a>
                                            <ul class="dropdown-menu">
                                                <li><a href="https://github.com/IntelliTect/Coalesce">Coalesce Framework</a></li>
                                                <li><a href="https://github.com/IntelliTect/Coalesce.Starter">Knockout Starter Project</a></li>
                                                <li><a href="https://github.com/IntelliTect/Coalesce.Starter.Vue">Vue Starter Project</a></li>
                                                <li><a href="https://github.com/IntelliTect/Coalesce.KnockoutJS.Template">Knockout CLI Template</a></li>
                                                <li><a href="https://github.com/IntelliTect/Coalesce.Vue.Template">Vue CLI Template</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                            </nav>
                        </div>
                    </div>
                </nav>
            </div><!-- End .row -->
            <div class="row">
                <div class="col-lg-12 col-md-10 col-lg-offset-1 col-md-offset-1 total-slider">

                </div>
            </div>
        </div>


    </header>

    <div class="container@(fluid) body-content">
        @RenderBody()
    </div>

    <footer>
        <div class="content">
            <nav>
                <div class="col-lg-5 col-sm-12 col-xs-12 site-nav clearfix">
                    <div class="col-lg-11 col-sm-10 col-sm-offset-2 col-xs-12 first-blue-part">

                        <div class="menu-footer-menu-links-container">
                            <ul id="menu-footer-menu-links" class="menu">
                                <li>
                                    &copy; @DateTime.Now.Year - <a href="https://www.intellitect.com">IntelliTect</a>
                                    @if (!string.IsNullOrWhiteSpace(User.Identity.Name))
                                    {
                                        <span>- @User.Identity.Name</span>
                                    }
                                </li>
                                @*<li><a href="/blog/">Blog</a></li>
                                    <li><a href="/about/">About</a></li>*@
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </footer>

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/javascripts/bootstrap.js"></script>
    <script src="~/lib/knockout/knockout-latest.js"></script>
    <script src="~/lib/knockout-validation/knockout.validation.js"></script>
    <script src="~/lib/moment/moment.js"></script>
    <script src="~/lib/select2/js/select2.js"></script>
    <script src="~/lib/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/js/app.js" asp-append-version="true"></script>
    <!-- Google Analytics -->
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-178624-5', 'auto');
        ga('send', 'pageview');


    </script>

    <script>
    var baseUrl = '@Url.Content( "~/" )';

    // Setup datetimepicker to use Font Awesome icons
    $.fn.datetimepicker.defaults.icons = {
        time: 'fa fa-clock-o',
        date: 'fa fa-calendar',
        up: 'fa fa-chevron-up',
        down: 'fa fa-chevron-down',
        previous: 'fa fa-chevron-left',
        next: 'fa fa-chevron-right',
        today: 'fa fa-dot-circle-o',
        clear: 'fa fa-trash',
        close: 'fa fa-times'
    };

    Coalesce.GlobalConfiguration.app.select2Theme("bootstrap");

    $.fn.select2.defaults.set( "theme", "bootstrap" );

    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>