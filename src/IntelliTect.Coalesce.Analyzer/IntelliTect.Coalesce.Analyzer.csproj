  </ItemGroup>

  <ItemGroup>
    <!-- TODO: Have to split the TypeDefinition parts of Coalesce into a separate netstandard project -->
    <ProjectReference Include="..\IntelliTect.Coalesce\IntelliTect.Coalesce.csproj" />
  </ItemGroup>

</Project>
