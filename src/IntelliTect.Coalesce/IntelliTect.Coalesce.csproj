<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<Description>Core framework library for IntelliTect.Coalesce</Description>
		<PlatformTarget>AnyCPU</PlatformTarget>

		<Nullable>enable</Nullable>
	</PropertyGroup>

	<ItemGroup>
	  <FrameworkReference Include="Microsoft.AspNetCore.App" />
	</ItemGroup>

	<ItemGroup>
	  <None Remove="Application\SecurityOverview.html" />
	</ItemGroup>

	<ItemGroup>
	  <EmbeddedResource Include="Application\SecurityOverview.html" />
	</ItemGroup>

	<ItemGroup>
    <!-- 1.0.22 is the last known working version. https://github.com/zzzprojects/System.Linq.Dynamic.Core/issues/662 -->
    <PackageReference Include="System.Linq.Dynamic.Core" Version="1.0.19.0" />

    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="$(DotNetPackageVersionSpec)" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Relational" Version="$(DotNetPackageVersionSpec)" />
	</ItemGroup>

  <ItemGroup Condition="$([MSBuild]::IsTargetFrameworkCompatible($(TargetFramework), 'net6.0'))">
    <!-- C# 11? -->
    <!-- C# 11? -->
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="4.4.0" />
  </ItemGroup>

  <ItemGroup Condition="$([MSBuild]::IsTargetFrameworkCompatible($(TargetFramework), 'net8.0'))">
    <!-- C# 12-->
    <PackageReference Update="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="4.8.*-*" />
  </ItemGroup>
</Project>