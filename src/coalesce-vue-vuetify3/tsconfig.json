{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "importHelpers": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tsbuildinfo",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@test/*": ["test/*"],
      "@test-targets/*": ["../test-targets/*"],
      "coalesce-vue": ["../coalesce-vue/src"],
      "coalesce-vue/*": ["../coalesce-vue/src/*"],
      "coalesce-vue/lib/*": ["../coalesce-vue/src/*"],
      "vue": ["node_modules/vue"],
      "vue/*": ["node_modules/vue/*"],
      "vue-router": ["node_modules/vue-router"],
      "@vue/reactivity": ["node_modules/@vue/reactivity/dist/reactivity"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "types": ["vue-router", "vuetify", "vitest/globals", "node"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "test/**/*.ts",
    "test/**/*.tsx"
  ],
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
