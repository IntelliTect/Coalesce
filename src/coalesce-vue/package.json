{
  "name": "coalesce-vue",
  "version": "0.1.0-local",
  "description": "Coalesce core scripts for Vue.js",
  "main": "./lib/index.js",
  "exports": {
    "./": "./lib/"
  },
  "types": "./lib/index.d.ts",
  "repository": "https://github.com/IntelliTect/Coalesce",
  "author": "IntelliTect",
  "license": "Apache-2.0",
  "private": false,
  "files": [
    "lib",
    "src",
    "test",
    "tsconfig.json",
    "tsconfig.build.json"
  ],
  "dependencies": {
    "@types/lodash-es": "^4.17.3",
    "@types/qs": "^6.5.3",
    "axios": "^0.19.1",
    "date-fns": "^2.9.0",
    "lodash-es": "^4.17.15",
    "qs": "^6.9.1",
    "tslib": "^1.10.0"
  },
  "peerDependencies": {
    "vue": "^2.6.11"
  },
  "optionalDependencies": {
    "fsevents": "1.2.9",
    "vue-router": ">=3.0.0"
  },
  "_comment": "fsevent@1.2.9 is locked in to prevent broken builds on windows for v1.2.11",
  "devDependencies": {
    "@types/jest": "^24.0.25",
    "cross-blob": "^1.2.1",
    "jest": "^24.9.0",
    "jest-junit": "^10.0.0",
    "lodash": "^4.17.15",
    "ts-jest": "^24.3.0",
    "typescript": "3.8.2",
    "vue": "^2.6.11",
    "vue-router": "^3.1.5"
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json",
    "prepack": "npm run build",
    "//": "No coverage by default because it breaks line numbers in error messages. `npm run test --coverage` to run it.",
    "test": "jest"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/test/global-setup.ts"
    ],
    "transform": {
      "^.+\\.(j|t)sx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**",
      "!src/index.ts"
    ],
    "moduleNameMapper": {
      "^vue$": "vue/dist/vue.common.js",
      "//": "Map the esm version of libs to the non-esm for the tests - jest doesn't do well with es modules & typescript. By some sheer chance of luck, the import statements can be written the same between the es and non-es versions of the files.",
      "^date-fns/esm$": "date-fns",
      "lodash-es": "lodash"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
