{
  "name": "coalesce-vue",
  "version": "0.1.0-local",
  "description": "Coalesce core scripts for Vue.js",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "repository": "https://github.com/IntelliTect/Coalesce",
  "author": "IntelliTect",
  "license": "Apache-2.0",
  "private": false,
  "files": [
    "lib",
    "src",
    "test",
    "tsconfig.json",
    "tsconfig.build.json"
  ],
  "dependencies": {
    "@types/lodash-es": "^4.17.3",
    "@types/qs": "^6.5.3",
    "axios": "^0.18.0",
    "date-fns": ">=2.0.0-alpha.26",
    "lodash-es": "^4.17.10",
    "qs": "^6.7.0"
  },
  "peerDependencies": {
    "vue": "^2.5.16"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "jest": "^24.7.1",
    "jest-junit": "^6.3.0",
    "lodash": "^4.17.10",
    "ts-jest": "^24.0.2",
    "typescript": "3.4.3",
    "vue": "^2.6.10"
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json",
    "prepack": "tsc -p ./tsconfig.build.json",
    "build-local": "npm pack",
    "//": "No coverage by default because it breaks line numbers in error messages. `npm run test --coverage` to run it.",
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.(j|t)sx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**",
      "!src/index.ts"
    ],
    "moduleNameMapper": {
      "^vue$": "vue/dist/vue.common.js",
      "//": "Map the esm version of libs to the non-esm for the tests - jest doesn't do well with es modules & typescript. By some sheer chance of luck, the import statements can be written the same between the es and non-es versions of the files.",
      "^date-fns/esm$": "date-fns",
      "lodash-es": "lodash"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
