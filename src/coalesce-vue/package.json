{
  "name": "coalesce-vue",
  "version": "0.1.0-local",
  "description": "Coalesce core scripts for Vue.js",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/cjs/index.js"
    },
    "./lib/*": {
      "types": "./lib/*.d.ts",
      "import": "./lib/*.js",
      "require": "./lib/cjs/*.js"
    }
  },
  "repository": "https://github.com/IntelliTect/Coalesce",
  "author": "IntelliTect",
  "license": "Apache-2.0",
  "private": false,
  "scripts": {
    "build": "tsc -p ./tsconfig.build.esm.json && tsc -p ./tsconfig.build.cjs.json",
    "prepack": "npm run build",
    "//": "No coverage by default because it breaks line numbers in error messages. `npm run test -- --coverage` to run it.",
    "test": "jest"
  },
  "files": [
    "lib",
    "src",
    "test",
    "tsconfig.json",
    "tsconfig.build.json"
  ],
  "dependencies": {
    "@types/lodash-es": "^4.17.3",
    "axios": "^0.26.1",
    "date-fns": "2.28.0",
    "date-fns-tz": "1.3.3",
    "lodash-es": "^4.17.15",
    "tslib": "2.3.1"
  },
  "peerDependencies": {
    "vue": "^2.6.14"
  },
  "optionalDependencies": {
    "vue-router": ">=3.0.0"
  },
  "devDependencies": {
    "@types/jest": "27.4.0",
    "cross-blob": "^1.2.1",
    "jest": "27.5.1",
    "jest-junit": "13.0.0",
    "lodash": "^4.17.15",
    "ts-jest": "27.1.3",
    "typescript": "4.6.3",
    "vite": "^2.6.14",
    "vue": "^2.6.14",
    "vue-router": "^3.1.5"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/test/global-setup.ts"
    ],
    "transform": {
      "^.+\\.(j|t)sx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "extensionsToTreatAsEsm": [".ts"],
    "collectCoverageFrom": [
      "src/**",
      "!src/index.ts"
    ],
    "moduleNameMapper": {
      "^vue$": "vue/dist/vue.common.js",
      "//": "Map the esm version of libs to the non-esm for the tests - jest doesn't do well with es modules & typescript. By some sheer chance of luck, the import statements can be written the same between the es and non-es versions of the files.",
      "lodash-es(.*)": "lodash$1",
      "(.+)\\.js": "$1"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
