@page
@model Coalesce.Starter.Vue.Web.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot password";
}

@if (Model.Success)
{
    <p>
        If an account matching your input was found, a message with password reset instructions will be sent to the account's email address.
    </p>

    <form method="get" action="/" class="d-grid mt-3">
        <button type="submit" class="btn btn-primary">
            Continue
        </button>
    </form>
}
else
{
    <form method="post" class="d-grid gap-2 mt-3">
        <div>
            <label asp-for="Username" class="form-label"></label>
            <input asp-for="Username" class="form-control" autocomplete="username" required />
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <button type="submit" class="btn btn-primary rounded-pill">Reset Password</button>
    </form>
}
